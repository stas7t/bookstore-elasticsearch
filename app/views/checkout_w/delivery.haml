%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  %h3.general-subtitle Credit Card
  .visible-xs
    .general-cart-item.divider-lg-bottom
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600 Method
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{type: "radio", hidden: "true"}
                %span.radio-icon
                %span.radio-text Delivery Next Day!
        %tr
          %td
            %span.in-grey-600 Days
          %td
            %span.font-16.fw-300 3 to 7 days
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500 €5.00
    .general-cart-item.divider-lg-bottom.mb-30
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600 Method
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{type: "radio", hidden: "true"}
                %span.radio-icon
                %span.radio-text Delivery Next Day!
        %tr
          %td
            %span.in-grey-600 Days
          %td
            %span.font-16.fw-300 3 to 7 days
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500 €5.00
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th.col-method
            %span.in-grey-600.ml-40 Method
          %th
            %span.in-grey-600 Days
          %th
            %span.in-grey-600 Price
      %tbody
        %tr
          %td
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{type: "radio", hidden: "true"}
                %span.radio-icon
                %span.radio-text Delivery Next Day!
          %td
            %span 3 to 7 days
          %td
            %span.font-16.in-gold-500 €28.50
        %tr
          %td
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{type: "radio", hidden: "true"}
                %span.radio-icon
                %span.radio-text Delivery Next Day!
          %td
            %span 3 to 7 days
          %td
            %span.font-16.in-gold-500 €28.50
  .general-text-align
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table
      %tr
        %td
          %p.font-16 Subtotal:
        %td
          %p.font-16 €117.69
      %tr
        %td
          %p.font-16 Coupon:
        %td
          %p.font-16 €0.00
      %tr
        %td
          %strong.font-18 Order Total:
        %td
          %strong.font-18 €117.69
  .text-center
    -#%button.btn.btn-default.mb-20 Save and Continue
    = link_to "Save and Continue", next_wizard_path, class: 'btn btn-default mb-20'
