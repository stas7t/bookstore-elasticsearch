%main.container
  %h1.general-title-margin Settings
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"} Address
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"} Privacy
  .tab-content
    #address.tab-pane.fade.general-main-wrap.in.active{role: "tabpanel"}
      %form
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0 Billing Address
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0 Shipping Address
        .row
          .col-md-5.mb-40
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 Billing Address
            .form-group.has-error
              %label.control-label.input-label{for: "firstName"} First Name
              %input#firstName.form-control{name:"fname", type: "text", placeholder: "First Name"}
              %span.help-block Please enter your first name
            .form-group
              %label.control-label.input-label{for: "lastName"} Last Name
              %input#lastName.form-control{name:"lname", type: "text", placeholder: "Last Name"}
            .form-group
              %label.control-label.input-label{for: "address"} Address
              %input#address.form-control{name: "address", type: "text", placeholder: "Address"}
            .form-group
              %label.control-label.input-label{for: "city"} City
              %input#city.form-control{name: "city", type: "text", placeholder: "City"}
            .form-group
              %label.control-label.input-label{for: "zip"} Zip
              %input#zip.form-control{name: "zip", type: "text", placeholder: "Zip"}
            .form-group
              %label.control-label.input-label{for: "сountry"} Country
              %input#country.form-control{name: "country", type: "text", placeholder: "Select a country"}
            .form-group.mb-60
              %label.control-label.input-label{for: "phone"} Phone
              %input#phone.form-control{name: "phone", type: "tel", placeholder: "Example +355 66 123 4567"}
            .text-center.general-text-align
              %button.btn.disabled Save
          .col-md-5.col-md-offset-1.mb-25
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 Shipping Address
            .form-group.has-error
              %label.control-label.input-label{for: "firstName"} First Name
              %input#firstName.form-control{name:"fname", type: "text", placeholder: "First Name"}
              %span.help-block Please enter your first name
            .form-group
              %label.control-label.input-label{for: "lastName"} Last Name
              %input#lastName.form-control{name:"lname", type: "text", placeholder: "Last Name"}
            .form-group
              %label.control-label.input-label{for: "address"} Address
              %input#address.form-control{name: "address", type: "text", placeholder: "Address"}
            .form-group
              %label.control-label.input-label{for: "city"} City
              %input#city.form-control{name: "city", type: "text", placeholder: "City"}
            .form-group
              %label.control-label.input-label{for: "zip"} Zip
              %input#zip.form-control{name: "zip", type: "text", placeholder: "Zip"}
            .form-group
              %label.control-label.input-label{for: "сountry"} Country
              %select#country.form-control{name: "country", placeholder: "Select a country"}
                %option London
                %option London
                %option London
            .form-group.mb-55
              %label.control-label.input-label{for: "phone"} Phone
              %input#phone.form-control{name: "phone", type: "tel", placeholder: "Example +355 66 123 4567"}
            .text-center.general-text-align
              %button.btn.disabled Save
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25 Email
          %form.general-form-md
            .form-group.mb-35
              %label.control-label.input-label{for: "email"} Enter Email
              %input#email.form-control{name:"email", type: "email", placeholder: "Enter your email"}
            .general-text-align
              %button.btn.btn-default.mb-35 Save
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25 Password
          %form.general-form-md.divider-lg-bottom.pb-25
            .form-group.mb-30
              %label.control-label.input-label{for: "oldPassword"} Old Password
              %input#oldPassword.form-control{name:"password", type: "password", placeholder: "Old Password"}
            .form-group.mb-30
              %label.control-label.input-label{for: "password"} New Password
              %input#password.form-control{name:"password", type: "password", placeholder: "New Password"}
            .form-group.mb-40
              %label.control-label.input-label{for: "confirmPassword"} Confirm Password
              %input#confirmPassword.form-control{name:"password", type: "password", placeholder: "Confirm Password"}
            .general-text-align
              %button.btn.disabled.mb-10 Save
        .col-sm-12
          %p.in-gold-500.font-18.mb-25 Remove Account
          %form
            .general-settings-btn
              %button.btn.disabled.mb-20 Please Remove My Account
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text I understand that all data will be lost